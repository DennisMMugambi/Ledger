<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWindowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.CustomAppBar" parent="AppTheme">
        <item name="actionBarStyle">@style/AppTheme.CustomActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@color/colorActionBarBackground</item>
    </style>

    <style name="AppTheme.CustomActionBarStyle" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="titleTextStyle">@style/AppTheme.CustomActionBarTextAppearance</item>
        <item name="background">@color/colorActionBarBackground</item>
    </style>

    <style name="AppTheme.CustomActionBarTextAppearance" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/crimson_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>
</resources>
